@page
@model HospiEnCasa.App.FrontEnd.Pages.EnfermeraEditModel
@{
}
<h2>Edición del Enfermera :@Model.Enfermera.Nombre @Model.Enfermera.Apellidos </h2>
<form method="post">
    <input type="hidden" asp-for="Enfermera.Id"/>
    <div class="form-group">
        <label asp-for="Enfermera.Nombre"></label>
        <input asp-for="Enfermera.Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="Enfermera.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Enfermera.Apellidos"></label>
        <input asp-for="Enfermera.Apellidos" class="form-control">
        <span class="text-danger" asp-validation-for="Enfermera.Apellidos"></span>
    </div>
    <div class="form-group">
        <label asp-for="Enfermera.NumeroTelefono"></label>
        <input asp-for="Enfermera.NumeroTelefono" class="form-control">
        <span class="text-danger" asp-validation-for="Enfermera.NumeroTelefono"></span>
    </div>
    <div class="form-group">
        <label asp-for="Enfermera.Genero"></label>
        <input asp-for="Enfermera.Genero" class="form-control">
        <span class="text-danger" asp-validation-for="Enfermera.Genero"></span>
    </div>
        <div class="form-group">
        <label asp-for="Enfermera.TarjetaProfesional"></label>
        <input asp-for="Enfermera.TarjetaProfesional" class="form-control">
        <span class="text-danger" asp-validation-for="Enfermera.TarjetaProfesional"></span>
    </div>
    <div class="form-group">
        <label asp-for="Enfermera.HorasLaborales"></label>
        <input asp-for="Enfermera.HorasLaborales" class="form-control">
        <span class="text-danger" asp-validation-for="Enfermera.HorasLaborales"></span>
    </div>
    <button type="submit" class="btn btn-primary">Grabar</button>
</form>
<a asp-page="./EnfermerasList" class="btn btn-primary">Lista de Enfermeras </a>
