@page
@model HospiEnCasa.App.FrontEnd.Pages.FamiliarDesignadoEditModel
@{
}
<h2>Edición del FamiliarDesignado :@Model.FamiliarDesignado.Nombre @Model.FamiliarDesignado.Apellidos </h2>
<form method="post">
    <input type="hidden" asp-for="FamiliarDesignado.Id"/>
    <div class="form-group">
        <label asp-for="FamiliarDesignado.Nombre"></label>
        <input asp-for="FamiliarDesignado.Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="FamiliarDesignado.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="FamiliarDesignado.Apellidos"></label>
        <input asp-for="FamiliarDesignado.Apellidos" class="form-control">
        <span class="text-danger" asp-validation-for="FamiliarDesignado.Apellidos"></span>
    </div>
    <div class="form-group">
        <label asp-for="FamiliarDesignado.NumeroTelefono"></label>
        <input asp-for="FamiliarDesignado.NumeroTelefono" class="form-control">
        <span class="text-danger" asp-validation-for="FamiliarDesignado.NumeroTelefono"></span>
    </div>
    <div class="form-group">
        <label asp-for="FamiliarDesignado.Genero"></label>
        <input asp-for="FamiliarDesignado.Genero" class="form-control">
        <span class="text-danger" asp-validation-for="FamiliarDesignado.Genero"></span>
    </div>
    <div class="form-group">
        <label asp-for="FamiliarDesignado.Parentesco"></label>
        <input asp-for="FamiliarDesignado.Parentesco" class="form-control">
        <span class="text-danger" asp-validation-for="FamiliarDesignado.Parentesco"></span>
    </div>
    <div class="form-group">
        <label asp-for="FamiliarDesignado.Correo"></label>
        <input asp-for="FamiliarDesignado.Correo" class="form-control">
        <span class="text-danger" asp-validation-for="FamiliarDesignado.Correo"></span>
    </div>
      
    <button type="submit" class="btn btn-primary">Grabar</button>
</form>
<a asp-page="./FamiliaresDesignadosList" class="btn btn-primary">Lista de Familiares </a>
