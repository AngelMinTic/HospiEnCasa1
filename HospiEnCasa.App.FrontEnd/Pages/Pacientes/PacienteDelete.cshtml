@page
@model HospiEnCasa.App.FrontEnd.Pages.PacienteDeleteModel
@{
}
<h2>¿Seguro deseas eliminar este dato?:</h2>
<div>
<h2>@Model.Paciente.Nombre @Model.Paciente.Apellidos</h2>
</div>
<div>
    Direccion: @Model.Paciente.Direccion
</div>
<div>
    Ciudad: @Model.Paciente.Ciudad
</div>
<div>
    Telefono: @Model.Paciente.NumeroTelefono
</div>
<div>
    Fecha de Nacimiento: @Model.Paciente.FechaNacimiento
</div>
<div>
    Familiar: @Model.Paciente.Familiar
</div>
<div>
    Enfermera: @Model.Paciente.Enfermera
</div>
<div>
    Medico: @Model.Paciente.Medico
</div>
<div>
    Historia: @Model.Paciente.Historia
</div>
<form method="post">
    <input type="hidden" asp-for="Paciente.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-page="./PacientesList" class="btn btn-primary">Lista de Pacientes </a>
</form>