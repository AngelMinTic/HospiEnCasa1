@page
@model HospiEnCasa.App.FrontEnd.Pages.MedicoEditModel
@{
}
<h2>Edición del Medico :@Model.Medico.Nombre @Model.Medico.Apellidos </h2>
<form method="post">
    <input type="hidden" asp-for="Medico.Id" />
    <div class="form-group">
        <label asp-for="Medico.Nombre"></label>
        <input asp-for="Medico.Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="Medico.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Medico.Apellidos"></label>
        <input asp-for="Medico.Apellidos" class="form-control">
        <span class="text-danger" asp-validation-for="Medico.Apellidos"></span>
    </div>
    <div class="form-group">
        <label asp-for="Medico.NumeroTelefono"></label>
        <input asp-for="Medico.NumeroTelefono" class="form-control">
        <span class="text-danger" asp-validation-for="Medico.NumeroTelefono"></span>
    </div>
    <div class="form-group">
        <label asp-for="Medico.Especialidad"></label>
        <input asp-for="Medico.Especialidad" class="form-control">
        <span class="text-danger" asp-validation-for="Medico.Especialidad"></span>
    </div>
    <div class="form-group">
        <label asp-for="Medico.Codigo"></label>
        <input asp-for="Medico.Codigo" class="form-control">
        <span class="text-danger" asp-validation-for="Medico.Codigo"></span>
    </div>
    <div class="form-group">
        <label asp-for="Medico.RegistroRethus"></label>
        <input asp-for="Medico.RegistroRethus" class="form-control">
        <span class="text-danger" asp-validation-for="Medico.RegistroRethus"></span>
    </div>
    <button type="submit" class="btn btn-primary">Grabar</button>
</form>
<a asp-page="./MedicosList" class="btn btn-primary">Lista de Medicos </a>